{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../dist",
    "baseUrl": "./",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    "frontend"
  ]
}
